<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".NavigationFragments.HalesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <!-- main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- logo, bell, user image & user name container -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny_minus"
                android:layout_marginBottom="@dimen/margin_xlarge"
                app:cardCornerRadius="@dimen/margin_small"
                app:cardElevation="@dimen/margin_small">
                <!-- card view main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                    <!-- logo & bell container -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginEnd="@dimen/margin_medium">

                        <!-- logo -->
                        <ImageView
                            android:layout_width="@dimen/logo_width"
                            android:layout_height="@dimen/logo_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/gawla_logo_blue" />

                        <!-- bell -->
                        <ImageView
                            android:layout_width="@dimen/icon_notification"
                            android:layout_height="@dimen/icon_notification"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="@dimen/margin_tiny"
                            android:src="@drawable/ic_bell" />

                    </RelativeLayout>

                    <!-- user image container -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_tiny">

                        <!-- just a placeholder for icon -->
                        <ImageView
                            android:layout_width="@dimen/image_account"
                            android:layout_height="@dimen/image_account"
                            android:background="@drawable/bg_circle_bordered_pale_grey2"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_user" />

                        <!-- image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/image_account"
                            android:layout_height="@dimen/image_account"
                            app:civ_border_color="@color/blueyGrey"
                            app:civ_border_width="1dp" />

                        <!-- btn edit -->
                        <ImageView
                            android:layout_width="@dimen/margin_xxlarge"
                            android:layout_height="@dimen/margin_xxlarge"
                            android:background="@drawable/bg_circle_mid_blue"
                            android:padding="@dimen/margin_tiny"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <!-- user name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:gravity="center"
                        android:text="ITGeeks"
                        android:textColor="@color/midBlue"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- 1st option card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_tiny"
                app:cardElevation="@dimen/margin_tiny">
                <!-- card view main layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/card_icon_1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:src="@drawable/ic_user" />

                    <!-- label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/card_icon_1st"
                        android:text="@string/account_details"
                        android:textColor="@color/darkSkyBlue"
                        android:textSize="@dimen/text_size_large" />

                    <!-- icon -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:src="@drawable/ic_arrow_left" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- 2nd option card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_tiny"
                app:cardElevation="@dimen/margin_tiny">
                <!-- card view main layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/card_icon_2st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:src="@drawable/ic_credit_card" />

                    <!-- label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/card_icon_2st"
                        android:text="@string/buying_processes"
                        android:textColor="@color/darkSkyBlue"
                        android:textSize="@dimen/text_size_large" />

                    <!-- icon -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:src="@drawable/ic_arrow_left" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- 3rd option card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/margin_tiny"
                app:cardElevation="@dimen/margin_tiny">
                <!-- card view main layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/card_icon_3st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:src="@drawable/ic_lock" />

                    <!-- label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/card_icon_3st"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/darkSkyBlue"
                        android:textSize="@dimen/text_size_large" />

                    <!-- icon -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:src="@drawable/ic_arrow_left" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>