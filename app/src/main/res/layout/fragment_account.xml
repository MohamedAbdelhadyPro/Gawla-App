<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".NavigationFragments.HalesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <!-- main layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- logo, bell, user image & user name container -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="-5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">
                <!-- card view main layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp">

                    <!-- logo & bell container -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp">

                        <!-- logo -->
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/gawla_logo_blue" />

                        <!-- bell -->
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_bell" />

                    </RelativeLayout>

                    <!-- user image container -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <!-- just a placeholder for icon -->
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="4dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_user"
                            android:background="@drawable/bg_circle_bordered_pale_grey2" />

                        <!-- image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="4dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/blueyGrey"/>

                        <!-- btn edit -->
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_circle_mid_blue"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit" />

                    </RelativeLayout>

                    <!-- user name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="ITGeeks"
                        android:textColor="@color/midBlue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- 1st option card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <!-- card view main layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/card_icon_1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_user" />

                    <!-- label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/card_icon_1st"
                        android:text="@string/account_details"
                        android:textColor="@color/darkSkyBlue"
                        android:textSize="18sp" />

                    <!-- icon -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_arrow_right" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- 2nd option card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <!-- card view main layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/card_icon_2st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_credit_card" />

                    <!-- label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buying_processes"
                        android:textColor="@color/darkSkyBlue"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/card_icon_2st"
                        android:textSize="18sp" />

                    <!-- icon -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_arrow_right" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- 3rd option card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <!-- card view main layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/card_icon_3st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_lock" />

                    <!-- label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/darkSkyBlue"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/card_icon_3st"
                        android:textSize="18sp" />

                    <!-- icon -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_arrow_right" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>