<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_rounded_corners_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">
    <!-- main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- image & cat container -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- image -->
            <ImageView
                android:id="@+id/round_product_image"
                android:layout_width="300dp"
                android:layout_height="165dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher_foreground" />

            <!-- category -->
            <TextView
                android:id="@+id/round_product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:background="@drawable/bg_rounded_corners_orange"
                android:padding="5dp"
                android:text="category"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/paleGrey" />

        <!-- name -->
        <TextView
            android:id="@+id/round_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/bgBlueDark"
            android:textSize="16sp" />

        <!-- price container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- price label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/sell_price"
                android:textColor="@color/blueyGrey" />

            <!-- price -->
            <TextView
                android:id="@+id/round_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="price"
                android:textColor="@color/colorOrange" />

        </LinearLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/paleGrey" />

        <!-- time container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <!-- icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alarm" />

            <!-- start time label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/round_start"
                android:textColor="@color/battleshipGrey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1.4"
                android:gravity="center"
                android:orientation="vertical">

                <!-- start time -->
                <TextView
                    android:id="@+id/round_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:textColor="@color/midBlue"
                    android:textSize="18sp" />

                <!-- end time container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- end time label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/close"
                        android:textColor="@color/blueyGrey"
                        android:textSize="10sp" />

                    <!--  end time -->
                    <TextView
                        android:id="@+id/round_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:gravity="end"
                        android:text="close time"
                        android:textColor="@color/paleRed"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/paleGrey" />

        <!-- members & cards container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <!-- icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user" />

            <!-- number of members -->
            <TextView
                android:id="@+id/round_members_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="members"
                android:textColor="@color/battleshipGrey" />

            <!-- cards label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cards" />

            <!-- red card -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/card_red" />

            <!-- green card -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/card_green" />

        </LinearLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/paleGrey" />

        <!-- as button -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/round_btn_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_corners_blue_270"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/join_round"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>