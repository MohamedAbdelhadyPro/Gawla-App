<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivities.PaymentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cairo_bold"
                android:gravity="center"
                android:text="الدفع"
                android:textColor="@color/midBlue"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="39dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="خطوة واحدة تفصلك عن التسجيل في الجولة لتتمتع بمزايا الانضمام  للصالة و تقدم العروض و ربح الجولات "
                android:textColor="@color/midBlue"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="39dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/bitmap" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="right"
                    android:paddingRight="40dp"
                    android:paddingBottom="5dp"
                    android:text="رقم بطاقة الائتمان"
                    android:textColor="@color/blueGrey"
                    android:textSize="14sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_shape"
                android:drawableRight="@drawable/iccreditcard"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="right"
                android:hint="• • • • • • • • • • • • •   "
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="right"
                android:paddingRight="40dp"
                android:paddingBottom="5dp"
                android:text="الاسم علي البطاقة"
                android:textColor="@color/blueGrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_shape"
                android:drawableRight="@drawable/icperson"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="right"
                android:hint="• • • • • • • • • • • • •   "
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="CVC2 "
                    android:textColor="@color/blueGrey" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="right"
                    android:paddingRight="40dp"
                    android:paddingBottom="5dp"
                    android:text="الرقم السري للبطاقة"
                    android:textColor="@color/blueGrey"
                    android:textSize="14sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_shape"
                android:drawableRight="@drawable/ichttps"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="right"
                android:hint="• • • •   "
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="right"
                android:paddingRight="40dp"
                android:paddingBottom="5dp"
                android:text="تاريخ الانتهاء"
                android:textColor="@color/blueGrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_shape"
                android:drawableRight="@drawable/icdaterange"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="right"
                android:hint=" • •   • •   "
                android:inputType="textPersonName"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_shape">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/cairo_bold"
                        android:gravity="center"
                        android:text="10 EGP / عضوية شهرية"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/cairo_bold"
                        android:gravity="center"
                        android:text="تاكيد الدفع"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>