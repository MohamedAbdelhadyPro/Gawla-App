<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivities.PaymentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/Payment"
                android:textColor="@color/midBlue"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="39dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="@string/payment_step"
                android:textColor="@color/midBlue"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="39dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="5dp"
                    android:text="@string/Payment_numberOfCard"
                    android:textColor="@color/blueGrey"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:paddingLeft="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/bitmap" />

            </LinearLayout>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_shape"
                android:drawableStart="@drawable/iccreditcard"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="start"
                android:hint="   • • • • • • • • • • • • • • •"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:textStyle="bold"
                android:gravity="start"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="5dp"
                android:text="@string/NameOfCard"
                android:textColor="@color/blueGrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_shape"
                android:drawableStart="@drawable/icperson"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="start"
                android:hint="    • • • • • • • • • • • • • • •"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="start"
                    android:paddingLeft="40dp"
                    android:textStyle="bold"
                    android:paddingRight="40dp"
                    android:paddingBottom="5dp"
                    android:text="@string/Card_PIN"
                    android:textColor="@color/blueGrey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:text="CVC2 "
                    android:textColor="@color/blueGrey" />

            </LinearLayout>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_shape"
                android:drawableStart="@drawable/ichttps"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="right|start"
                android:hint="    • • • •"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:textStyle="bold"
                android:gravity="start"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="5dp"
                android:text="@string/Expiry_date"
                android:textColor="@color/blueGrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_shape"
                android:drawableStart="@drawable/icdaterange"
                android:ems="10"
                android:fontFamily="@font/cairo_regular"
                android:gravity="right|start"
                android:hint="   • •   • •"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/editText_hint"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rBtnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_shape">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="center"
                        android:text="@string/Monthly_membership"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/cairo_regular"
                        android:gravity="center"
                        android:text="@string/Confirm_payment"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>