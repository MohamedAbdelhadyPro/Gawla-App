<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context=".RoundUpdatesActivity">
    <!-- main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- logo, bell & back btn container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp">

            <!-- logo -->
            <ImageView
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/gawla_logo_blue" />

            <!-- bell -->
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_bell" />

            <!-- back -->
            <ImageView
                android:id="@+id/round_update_btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_right" />

        </RelativeLayout>

        <!-- members, updates & time container -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <!-- card view main layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <!-- number of joined members -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_corners_pale_grey2"
                    android:drawablePadding="12dp"
                    android:drawableStart="@drawable/ic_members"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/zero_members_joined"
                    android:textSize="13sp" />

                <!-- updates -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/round_updates_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- time & cards container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp">

                    <!-- time -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="6:24:14"
                        android:textColor="@color/midBlue"
                        android:textSize="15sp" />

                    <!-- cards icon container -->
                    <RelativeLayout
                        android:id="@+id/round_update_btn_cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/bg_circle_blue_270"
                            android:padding="20dp"
                            android:src="@drawable/ic_cards"
                            android:tint="@android:color/white" />

                        <!-- cards notification -->
                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_circle_red"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- add offer container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <!-- as button -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/round_btn_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_corners_blue_270"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/add_offer"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <!-- value -->
            <EditText
                android:id="@+id/round_updates_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_corners_bordered_white_pale_grey"
                android:gravity="center"
                android:hint="0.00 EGP"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- bottom sheet -->
    <include layout="@layout/bottom_sheet_round_update" />

</android.support.design.widget.CoordinatorLayout>