<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="15dp">
            <!-- card view main layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="محفظة الكروت"
                    android:textColor="@color/battleshipGrey"
                    android:textSize="16sp" />

                <!-- green card container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_rounded_corners_pale_grey">

                    <!-- status & btn -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <!-- status -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:text="لديك الكارت الاخضر"
                            android:textColor="@color/battleshipGrey"
                            android:textSize="18sp" />

                        <!-- as button -->
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_rounded_corners_green_270"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="@string/activate_card"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <!-- card container -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <!-- green card icon -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_circle_white"
                            android:padding="20dp"
                            android:src="@drawable/card_green" />

                        <!-- counter -->
                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/bg_circle_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- red card container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_rounded_corners_pale_grey">

                    <!-- status & btn -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <!-- status -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:text="لديك الكارت الاخضر"
                            android:textColor="@color/battleshipGrey"
                            android:textSize="18sp" />

                        <!-- as button -->
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_rounded_corners_red_270"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="@string/buy_card"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <!-- card container -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <!-- red card icon -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_circle_white"
                            android:padding="20dp"
                            android:src="@drawable/card_red" />

                        <!-- counter -->
                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/bg_circle_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <!-- close btn -->
    <ImageView
        android:id="@+id/close_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_circle_blue_270"
        android:padding="20dp"
        android:src="@drawable/ic_close"
        android:tint="@android:color/white" />

</RelativeLayout>