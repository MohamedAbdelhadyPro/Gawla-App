<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="المنتج المعروض"
                    android:textColor="@color/battleshipGrey"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height_product"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/macbook" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyProdList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:fontFamily="@font/cairo_bold"
                    android:padding="@dimen/margin_small"
                    android:text="نوت بوك من ايسر ES1-523-82TN - ايه ام دي A8-7410 شاشة 15.6 بوصة 4 جيجابايت 1 تيرابايت لينكس،"
                    android:textColor="@color/duskBlue"
                    android:textSize="@dimen/text_size_large" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@color/paleGreyTwo">

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo_bold"
                        android:text="5,599.00 جنيه"
                        android:textColor="@color/azureTwo"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo_semibold"
                        android:paddingRight="@dimen/margin_tiny"
                        android:text="سعر البيع :"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@color/paleGreyTwo">

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_large"
                        android:padding="@dimen/margin_tiny"
                        android:text="الوصف:"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:gravity="right"
                        android:padding="@dimen/margin_tiny"
                        android:text="يو إس بيUSB 2.0 &amp; 3.0 حجم الشاشة (انش)15.6 Inch العلامة التجارية لمتحكم الفيديوAMD العلامة التجاريةايسر المعالج: A8-7410 ( 2 ميجا كاش، 2.2 جيجاهرتز) الذاكرة: 4 جيجابايت DDR3L القرص الصلب: 1 تيرابايت بطاقة رسومات: مشترك - مدمج الشاشة: 15.6 بوصة اتش دي دقة (1366 x 768) المحرك الضوئي: ناسخ دي في دي المنافذ: 1x يو اس بي 3.0, 2x يو اس بي 2.0, شبكة (RJ-45), مخرج اتش دي ام اي الصوت: 2 مكبر صوت الاتصال: لان لاسلكي 802.11ac ، جيجابت لان البطارية: 2 خلية نظام التشغيل: لينكس الكاميرا:0.3M في ..."
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>